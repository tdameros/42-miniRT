TEST_DIR = test/
SRCS_TEST =\
	$(LIBFT_INCLUDE)ft_bitmask.h.c		\
	$(LIBFT_INCLUDE)ft_bools.h.c		\
	$(LIBFT_INCLUDE)ft_char.h.c			\
	$(LIBFT_INCLUDE)ft_hashmap.h.c		\
	$(LIBFT_INCLUDE)ft_io.h.c			\
	$(LIBFT_INCLUDE)ft_linked_list.h.c	\
